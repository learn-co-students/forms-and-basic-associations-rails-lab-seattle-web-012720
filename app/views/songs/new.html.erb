<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
<br>

  <%= f.label :genre_name%>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  <br>

  <input name='song[note_contents][]' id='song_notes_0_content'>
  <input name='song[note_contents][]' id='song_notes_1_content'>
  <input name='song[note_contents][]' id='song_notes_2_content'>
 
  <%= f.submit "Create Song"%>
<% end %>
